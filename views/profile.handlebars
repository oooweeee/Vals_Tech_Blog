<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a Blog Post</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Post Title:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-funding">Description:</label>
        <input class="form-input" type="text" id="project-funding" name="project-funding" />
      </div>
     
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="comment-btn">Create</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Posts</h3>
 <div class="row mb-2"></div>
    {{#each projects as |project|}}
      {{>project}}    
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>